@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/Layouts.cshtml";
}


@section left_menu{
    <div class="panel-group left_menu col-md-3 hidden-xs hidden-sm" id='left_menu'>
        <div class="panel-heading">
            <h4 class="panel-title">
                <i class='icon-line-menu'></i> Menu
            </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse in">
            <div class="panel-body">
                @{Html.RenderAction("Category", "Home");}
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('.left_menu').addClass('left_menu_sticker');
        });
    </script>
    <script>
        $(window).load(function () {
            $('.left_menu').addClass('left_menu_sticker');
        });
    </script>
}

@section title{
    <section id="page-title">
        <div class="container clearfix">
            <h1 class="col-md-6 col-sm-6">Liên hệ</h1>
            <ol class="breadcrumb col-md-6 col-sm-6 hidden-xs">
                <li><a href="/">Trang chủ</a></li>
                <li class="active">Liên hệ</li>
            </ol>
        </div>
    </section>
}

@section footerJS{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBycQYX3bstI_wAn1F-pYXnZ5_8tdorvPM"></script>
    <script src="~/Assets/client/js/contact.js"></script>
}

<style>
    #map {
        height: 400px;
    }
</style>

<div class="content-wrap">
    <input type="hidden" id="hidAddress" value="@Model.ContactDetail.Name<br />Điện thoại:@Model.ContactDetail.Phone <br>Địa chỉ: @Model.ContactDetail.Address" />
    <input type="hidden" id="hidLat" value="@Model.ContactDetail.Lat" />
    <input type="hidden" id="hidLng" value="@Model.ContactDetail.Lng" />
    <input type="hidden" id="hidName" value="@Model.ContactDetail.Name" />
    <div class="container clearfix">
        <!-- Google Map
        ============================================= -->
        <section class='container' style='margin-bottom: 40px'>
            <div id="map"></div>
        </section>
        <!-- Google Map End -->
        <!-- Postcontent
        ============================================= -->
        <div class="postcontent nobottommargin">
            <h3>Viết nhận xét</h3>
            <div id="contact-form-result" data-notify-type="success" data-notify-msg="<i class=icon-ok-sign></i> Message Sent Successfully!"></div>
            <form accept-charset='UTF-8' id="frmContact" class='contact-form' method='post'>

                <div class="alert alert-success" id="contactResult" style="display: none;">
                    Cám ơn bạn đã liên hệ! Chúng tôi sẽ trả lời ngay khi có thể
                </div>

                <div class="form-process"></div>
                <div class="col_one_third">
                    <label for="template-contactform-name">Tên <small class='require_symbol'>*</small></label>
                    <input type="text" id="template-contactform-name" name="name" value="" placeholder='Họ tên của bạn' class="sm-form-control required" />
                </div>
                <div class="col_one_third">
                    <label for="template-contactform-email">Email <small class='require_symbol'>*</small></label>
                    <input type="email" id="template-contactform-email" name="email" value="" placeholder='Nhập email của bạn' class="required email sm-form-control" />
                </div>
                <div class="col_one_third col_last">
                    <label for="template-contactform-phone">Số điện thoại<small class='require_symbol'>*</small></label>
                    <input type="text" id="template-contactform-phone" name="phone" value="" placeholder='Nhập số điện thoại của bạn' class="sm-form-control" />
                </div>
                <div class="clear"></div>
                <div class="col_full">
                    <label for="template-contactform-message">Viết bình luận <small class='require_symbol'>*</small></label>
                    <textarea class="required sm-form-control" id="template-contactform-message" name="message" rows="6" cols="30"></textarea>
                </div>
                <div class="col_full hidden">
                    <input type="text" id="template-contactform-botcheck" name="template-contactform-botcheck" value="" class="sm-form-control" />
                </div>
                <div class="col_full">
                    <button class="button button-3d nomargin" type="submit" id="template-contactform-submit" name="template-contactform-submit" value="submit">Gửi liên hệ</button>
                </div>
            </form>
            <!-- </form>-->            
        </div><!-- .postcontent end -->
        <!-- Sidebar
        ============================================= -->
        <div class="sidebar col_last nobottommargin">
            <h3>Chúng tôi ở đây</h3>
            <address>
                <strong>@Model.ContactDetail.Name</strong><br>
                @Model.ContactDetail.Address
            </address>
            <abbr title="Phone Number"><strong>Số điện thoại:</strong></abbr> @Model.ContactDetail.Phone<br>
            <abbr title="Fax"><strong>Fax:</strong></abbr> (91) 8547 632521<br>
            <abbr title="Email Address"><strong>Email:</strong></abbr> @Model.ContactDetail.Email

        </div><!-- .sidebar end -->
    </div>
</div>
